@model MVCBookShop.Models.Publisher

<h2>@Model.Name</h2>

@if (!string.IsNullOrEmpty(Model.Description))
{
    <p>@Model.Description</p>
}

@if (!string.IsNullOrEmpty(Model.ImageLink))
{
    <img src="@Model.ImageLink" alt="Image of @Model.Name" />
}

<h3>Книги:</h3>

<ul>
    @foreach (var book in Model.Books)
    {
        <li>
            <a href="@Url.Action("Details", "Home", new { id = book.Id })">@book.Title</a> - @book.Year
        </li>
    }
</ul>